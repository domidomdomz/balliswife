{
    "compilerOptions": {
        "outDir": "dist", // Ensures compiled files go to 'dist'
        "rootDir": "src", // Source files directory
        "module": "commonjs",
        "target": "es6",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [ "src" ], // Include the 'src' folder
    "exclude": [ "node_modules" ]
}
